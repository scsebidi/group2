<div class="row">
  <div class="col-md-2">
    <div class="side1">
      
        <ul class="list-group">
          <li class="list-group-item list-group-item-success"><%= link_to 'Edit Profile', edit_user_registration_path %></li>
          <li class="list-group-item list-group-item-info"><%= link_to 'Order History', orders_path %></li>
          <li class="list-group-item"></li>
          <li class="list-group-item list-group-item-warning"><b>Categories</b></li>
        <li class="list-group-item"><%= link_to 'All Categories', categories_path %></li>
        
          <%= render @categories %>
        </ul>
    </div>
  </div>
  <div class="col-md-10">
    <div class="side1">
      <div class="sidetop">
      <ol class="breadcrumb">
        <li><%= link_to 'Home', root_path, :class => 'sid' %></li></li>
        <li><%= link_to "category", categories_path, :class => 'sid' %></li>
      </ol>
      </div>
      <% if user_signed_in? %>
      <% if current_user.role == "admin" %>
      <%= link_to 'New Category', new_category_path, :class => 'btn btn-info btn-sm' %>
       <% end %>
       <% end %> 
      <h1>Listing categories</h1>
        <ul class="list-group">
         <% @categories.each do |category| %>
          <li class="list-group-item">
            <span class="badge">14 Products Available</span>
            <h3><b><%= category.name %></b></h3>
            <%= category.description %> <br />
            <%= link_to 'View Category', category, :class => 'btn btn-primary btn-sm' %> <% if !current_user.nil? and current_user.admin? %> | <%= link_to 'Edit', edit_category_path(category), :class => 'btn btn-info btn-sm' %> | <%= link_to 'Destroy', category, method: :delete, :class => 'btn btn-danger btn-sm', data: { confirm: 'Are you sure?' } %> <% end %>
          </li>
         <% end %>
        </ul>
        
    </div>
  </div>
  
</div>


