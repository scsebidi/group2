<%= simple_form_for(@product_image, :html => {:multipart => true}) do |f| %>
  <%= f.error_notification %>
<%= @product_image.errors.full_messages %>
  <div class="form-inputs">
    <%= f.collection_select(:product_id,Product.all,:id,:name, {prompt: 'Select Product'}) %>
    <%= f.input :desc %>
    <%= f.input :created_at %>
	 <%= f.label :picture %><br />
    <%= f.file_field :picture %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
