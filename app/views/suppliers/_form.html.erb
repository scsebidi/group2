<%= simple_form_for(@supplier) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :company_name %>
    <%= f.input :contact_email %>
    <%= f.input :contact_number %>
    <%= f.input :address %>
    <%= f.input :suburb %>
    <%= f.input :city %>
    <%= f.input :province %>
    <%= f.input :created_at %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
